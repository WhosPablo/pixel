<h4> You have <%= pluralize(@activities.count, 'notification') %></h4>
<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>Notification</th>
  </tr>
  </thead>
  <tbody>
  <% @activities.each do |activity| %>
    <tr>
      <td><%= render "shared/notification_helper", activity: activity %></td>
    </tr>
  <% end %>
</table>

