<div id="question-<%= question.id %>" class="question">
  <%= render question, remote: false %>
  <div class="row">
    <div class="col-lg-7 col-lg-offset-2">
      <%= render 'comments/form', commentable: question %>
      <div class="comments">
        <%= render(question.comments) %>
      </div>
    </div>
  </div>
</div>

