<div id="mentionable-data" data-content="<%= mentionable_user_path(current_user)%>"></div>
<div class="w3-container w3-card-2 w3-white w3-round question"><br>
  <%= simple_form_for question, html: { class: "question-form", autocomplete: "off"}, remote: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.input :body, :label => "Quick question", as: :text %>
      <%= f.input :recipients_list_csv, :label => "Recipients:", placeholder: '@luciano.arango, @jordan.smith', input_html: {class: 'input-mentionable', value: nil }%>
      <%= f.input :labels_csv, :label => "Labels:", placeholder: 'Marketing' %>

      <%= f.button :button, class: "btn btn-primary pull-right w3-margin-bottom", data: {disable_with: "Creating..."} do %>
          <%= type.titleize %> </i>
      <% end %>
  <% end %>
</div>
