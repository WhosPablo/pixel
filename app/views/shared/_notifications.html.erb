<li role="presentation" class="dropdown" id="notifications-button">
  <a id="notifications-link" class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false" data-userid="<%= current_user.id %>">
    Notifications <span class="notifications-count"><%= "(#{@fresh_activities.count})" if @fresh_activities and @fresh_activities.count > 0 %></span><span class="caret"></span>
  </a>
  <ul class="dropdown-menu notification-menu">
    <% @fresh_activities.each do |activity| %>
        <li>
          <%= render "shared/notification_helper", activity: activity %>
        </li>
    <% end %>
    <% if @other_activities %>
      <% @other_activities.each do |activity| %>
          <li>
            <%= render "shared/notification_helper", activity: activity %>
          </li>
      <% end %>
    <% end %>
    <li><%= link_to "Show All Notifications", notifications_user_path(current_user) %></li>

  </ul>
</li>
